  <main class="main-content fade-in delay-1">
    <section class="section-head">
      <h2>Proyectos Activos</h2>
      <span class="accent-line" aria-hidden="true"></span>
    </section>

    <section id="projects-grid" class="projects-grid" aria-label="Listado de proyectos"></section>

    <p class="helper-text">
      Para agregar nuevos proyectos, solo añade un objeto al arreglo <code>projectList</code> en
      <code>index.html</code>.
    </p>
  </main>

  <script>
    // Lista central de proyectos para mantener el crecimiento de la plataforma.
    const projectList = [
      { name: "Hotel", page: "hotel.html", icon: "hotel" },
      { name: "Mistico Park", page: "mistico.html", icon: "park" }
    ];

    const icons = {
      hotel: `
        <svg viewBox="0 0 24 24" aria-hidden="true">
          <path d="M3 21h18v-2H3v2zm2-4h3v-4h2v4h4v-7h2v7h3V3H5v14z" />
        </svg>
      `,
      park: `
        <svg viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 2l4 5h-3l3 4h-3l4 5h-4v6h-2v-6H7l4-5H8l3-4H8l4-5z" />
        </svg>
      `
    };

    const grid = document.getElementById("projects-grid");

    projectList.forEach((project, index) => {
      const card = document.createElement("a");
      card.href = project.page;
      card.className = "project-card";
      card.style.animationDelay = `${0.15 * (index + 1)}s`;
      card.innerHTML = `
        <span class="icon-wrap">${icons[project.icon] || ""}</span>
        <span class="project-name">${project.name}</span>
        <span class="project-cta">Ver colaboradores</span>
      `;
      grid.appendChild(card);
    });
  </script>
